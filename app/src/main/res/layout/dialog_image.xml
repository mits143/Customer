<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_black_transparent"
    android:orientation="vertical"
    android:padding="10dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <com.otgs.customerapp.utils.TextViewDrawableSize
            android:id="@+id/txtTakePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_center_focus_weak_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/md_grey_500"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/take_photo"
            android:textSize="14sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <com.otgs.customerapp.utils.TextViewDrawableSize
            android:id="@+id/txtChoosePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_image_black_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/md_grey_500"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/choose_photo"
            android:textSize="14sp"
            app:compoundDrawableHeight="12dp"
            app:compoundDrawableWidth="12dp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>